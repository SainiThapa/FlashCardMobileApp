<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCardMobileApp.Views.BrowsePage"
             Title="My Flashcards">
    <CollectionView ItemsSource="{Binding Flashcards}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Question}" FontSize="Medium" FontAttributes="Bold" />
                    <Label Text="{Binding CategoryName}" FontSize="Small" TextColor="Gray" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>