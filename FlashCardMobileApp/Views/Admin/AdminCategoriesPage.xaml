<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCardMobileApp.Views.Admin.AdminCategoriesPage"
             BackgroundColor="#E3F2FD"
             Title="Manage Categories">

    <StackLayout Padding="30" Spacing="20">
        <Button Text="Add Category" Command="{Binding AddCategoryCommand}" BackgroundColor="#4CAF50" TextColor="White"/>
        <ListView ItemsSource="{Binding Categories}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" FontSize="18"/>
                            <Button Text="Edit" Command="{Binding EditCategoryCommand}" CommandParameter="{Binding .}" BackgroundColor="#FF9800" TextColor="White"/>
                            <Button Text="Delete" Command="{Binding DeleteCategoryCommand}" CommandParameter="{Binding .}" BackgroundColor="#D32F2F" TextColor="White"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
