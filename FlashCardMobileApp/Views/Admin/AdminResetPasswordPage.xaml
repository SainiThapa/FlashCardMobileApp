<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCardMobileApp.Views.Admin.AdminResetPasswordsPage"
             BackgroundColor="#E3F2FD"
             Title="Reset User Passwords">

    <StackLayout Padding="30" Spacing="20">
        <Entry Placeholder="Enter User Email" x:Name="EmailEntry"/>
        <Entry Placeholder="New Password" x:Name="NewPasswordEntry" IsPassword="True"/>
        <Button Text="Reset Password" Command="{Binding ResetPasswordCommand}" BackgroundColor="#FF6F61" TextColor="White"/>
    </StackLayout>
</ContentPage>
