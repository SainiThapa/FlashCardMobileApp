<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCardMobileApp.Views.Admin.AdminHomePage"
             Title="Admin Panel">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Button to View Users -->
        <Button Text="View Users" 
                Clicked="OnViewUsersClicked"
                BackgroundColor="#1976D2"
                TextColor="White"
                CornerRadius="10" 
                WidthRequest="250"/>

        <!-- Button to View Categories -->
        <Button Text="View Categories" 
                Clicked="OnViewCategoriesClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="250"/>

        <!-- Button to Reset User Passwords -->
        <Button Text="Reset User Passwords" 
                Clicked="OnResetPasswordsClicked"
                BackgroundColor="#FF9800"
                TextColor="White"
                CornerRadius="10" 
                WidthRequest="250"/>

        <!-- Button to Download User Flashcards Summary -->
        <Button Text="Download User Flashcards Summary" 
                Clicked="OnDownloadUserFlashcardsSummaryClicked"
                BackgroundColor="#9C27B0"
                TextColor="White"
                CornerRadius="10" 
                WidthRequest="250"/>

        <!-- Button to Download All Flashcards with Owners -->
        <Button Text="Download All Flashcards with Owners" 
                Clicked="OnDownloadAllFlashcardsWithOwnersClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="250"/>

        <!-- Button to Logout -->
        <Button Text="Logout" 
                Clicked="OnLogoutClicked"
                BackgroundColor="#F44336"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="250"/>

    </StackLayout>
</ContentPage>
